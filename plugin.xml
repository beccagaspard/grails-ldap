<plugin name='ldap' version='0.8.2' grailsVersion='2.2.2 &gt; *'>
  <author>Luke Daley</author>
  <authorEmail>ld@ldaley.com</authorEmail>
  <title>Adds easy to use LDAP connectivity</title>
  <description>Utilises Gldapo (http://gldapo.codehaus.org) to provide an object oriented LDAP interface</description>
  <documentation>http://grails.org/plugin/ldap</documentation>
  <type>LdapGrailsPlugin</type>
  <resources>
    <resource>spring.resources</resource>
    <resource>Group</resource>
    <resource>Person</resource>
    <resource>LdapServer</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies>
    <test>
      <dependency group='org.apache.directory.shared' name='shared-asn1' version='0.9.12' />
      <dependency group='org.apache.directory.shared' name='shared-ldap-constants' version='0.9.12' />
      <dependency group='org.apache.directory.server' name='apacheds-all' version='1.5.4' />
      <dependency group='org.apache.directory.shared' name='shared-ldap' version='0.9.12' />
    </test>
    <compile>
      <dependency group='org.codehaus' name='gldapo' version='0.8.5' />
      <dependency group='org.springframework.ldap' name='spring-ldap' version='1.3.1.RELEASE' />
    </compile>
  </dependencies>
  <plugins />
  <runtimePluginRequirements />
  <behavior />
</plugin>